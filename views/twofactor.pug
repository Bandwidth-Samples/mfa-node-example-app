extends layout

block content
    div.text-center
        form(class="form" method="POST" action="/users/home")
            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Please enter 2FA one-time pass

            //-input code
            label( for="inputCode" class="sr-only") Two factor code
            input(type="string" name="code" id="inputCode" class="form-control" required autofocus)

            //-phone number
            input(type="hidden" name="phone" id="hiddenPhone" value=phone)

            //-submit button
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Submit

            - var pClasses=['mt-5', 'mb-3', 'text-muted'];
            p(class=pClasses) &copy; 2020